<Window x:Class="MAD.Ressourcen.UserControls.GameMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MAD.Ressourcen.UserControls"
        mc:Ignorable="d"
        Title="GameMenu" Height="300" Width="260" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" WindowStyle="None" BorderThickness="2" BorderBrush="Black">
    <Grid Background="#74B389">
        <StackPanel Margin="20">
            <Button x:Name="fortsetzen" Style="{StaticResource Menu_Buttons}" Height="60" Width="200" Click="fortsetzen_Click" IsCancel="True">Fortsetzen</Button>
            <Button x:Name="speichern" Style="{StaticResource Menu_Buttons}" Height="60" Width="200" Click="speichern_Click">Speichern</Button>
            <Button x:Name="menu" Style="{StaticResource Menu_Buttons}" Height="60" Width="200" Click="menu_Click">Hauptmenü</Button>
            <Button x:Name="beenden" Style="{StaticResource Menu_Buttons}" Height="60" Width="200" Click="beenden_Click">Beenden</Button>
        </StackPanel>
    </Grid>
</Window>
